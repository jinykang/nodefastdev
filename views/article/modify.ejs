

            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>게시글 정보관리</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Home/Index">Home</a>>
                        </li>
                        <li>
                            <a>게시글 정보관리</a>>
                        </li>
                        <li class="active">
                            <strong>게시글 등록/수정</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <div class="ibox-content m-b-sm border-bottom">


                <form action="/articles/modify" method="post">

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">제목</label>
                                <input type="text" class="form-control" name="title" value="<%=article.title%>">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="control-label">글내용</label>
                                <textarea class="form-control" rows="10" cols="5" name="contents"><%=article.contents%></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label">메일주소</label>
                                <input type="text" class="form-control" name="email" value="<%=article.email%>">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label">작성자명</label>
                                <input type="text" class="form-control" name="writer" value="<%=article.writer%>">
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label">게시여부</label>
                                <select class="form-control" name="display">
                                    <option value="Y" <% if(article.display == "Y"){%>selected <% }%> >게시함</option>
                                    <option value="N" <% if(article.display == "N"){%>selected <% }%> >게시안함</option>
                                </select>
                            </div>
                        </div>

                    </div>


                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">저장</button>
                        <a href="#" class="btn btn-info">목록</a>

                        
                        <a href="/articles/delete?aid=<%= article.article_id%>" class="btn btn-danger">삭제</a>

                        <!-- 숨김필드로 게시글 고유번호 저장 -->
                        <input type="hidden" name="articleid" value="<%= article.article_id%>"/>
                    </div>
                </form>
                </div>
            </div>
